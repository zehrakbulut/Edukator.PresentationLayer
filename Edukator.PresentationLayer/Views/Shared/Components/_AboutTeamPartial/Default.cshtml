@model List<Edukator.EntityLayer.Concrete.Team>

<section class="w3l-team-main team py-5" id="team">
    <div class="container py-lg-5">
        <h5 class="title-subw3hny mb-1 text-center">Ekibimiz</h5>
        <h3 class="title-w3l text-center">@ViewBag.teamTitle1 <span class="inn-text">@ViewBag.teamTitle2</span></h3>
        <div class="row team-row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-6 team-wrap mt-5">
                    <div class="team-member text-center">
                        <div class="team-img">
                            <img src="@item.ImageURL" alt="" class="radius-image">
                            <div class="overlay-team">
                                <div class="team-details text-center">
                                    <div class="socials mt-20">
                                        <a href="#url">
                                            <span class="fab fa-facebook-f"></span>
                                        </a>
                                        <a href="#url">
                                            <span class="fab fa-twitter"></span>
                                        </a>
                                        <a href="#url">
                                            <span class="fab fa-linkedin-in"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="#url" class="team-title">@item.Name @item.Surname</a>
                        <p>@item.Department</p>
                    </div>
                </div>
            }
        </div>
</section>